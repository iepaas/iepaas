#
# iepaas nginx configuration file
#
# DO NOT MODIFY THIS!
# This file is managed by iepaas. Any modifications may result in
# its malfunction.
#

{{#if children.length}}
	upstream app {
		{{#each children}}
			server {{machineAddress}}:{{machinePort}};
		{{/each}}
	}
{{/if}}

server {
	listen 80;
	listen 443 ssl;

	ssl_certificate /iepaas/server.crt;
	ssl_certificate_key /iepaas/server.key;

	ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
	ssl_ciphers HIGH:!aNULL:!MD5;

	root /var/www/html;

	index index.html index.htm index.nginx-debian.html;

	server_name _;

	location / {
		{{#if appBuilt}}
			{{#if appRunning}}
				proxy_pass http://app;
				proxy_http_version 1.1;
				proxy_set_header Upgrade $http_upgrade;
				proxy_set_header Connection 'upgrade';
				proxy_set_header Host $host;
				proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
				proxy_cache_bypass $http_upgrade;
			{{else}}
				proxy_pass http://localhost:4898/errors/appNotRunning;
			{{/if}}
		{{else}}
			proxy_pass http://localhost:4898/errors/appNotBuilt;
		{{/if}}
	}
}
